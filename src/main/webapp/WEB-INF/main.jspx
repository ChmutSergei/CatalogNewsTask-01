<?xml version="1.0" encoding="UTF-8" ?>
<html xmlns:jsp="http://java.sun.com/JSP/Page" xmlns:c="http://java.sun.com/jsp/jstl/core"
      xmlns:fmt="http://java.sun.com/jsp/jstl/fmt"
      version="2.0">
<jsp:directive.page pageEncoding="UTF-8" contentType="text/html; UTF-8"/>
<!--<script>var contextUrl = '${pageContext.request.contextPath}';</script>-->

<head>

    <![CDATA[
    <meta charset="utf-8">
    <meta nameNews="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  ]]>

</head>
<body>




    <div class="container col-xs-12" style="background-color:#e6f7d9;">

        <!--Show message success or error-->

        <c:if test="${not empty sessionScope.error}">
            <div class="alert alert-warning col-xs-6 left-arrow">
                ${error}
            </div>
        </c:if>

        <c:if test="${not empty sessionScope.success}">
            <div class="alert alert-success col-xs-6 left-arrow">
                ${success}
            </div>
        </c:if>

        <!--Ref for Add News-->
        <div class="col-xs-offset-3 col-xs-6" >
            <a id="add1" href="${pageContext.request.contextPath}/controller?command=add" class="button"
               style="font-size: larger;padding-top: 30px" ><strong>Add News</strong></a>
        </div>
        <!--Enter params for search-->

        <fieldset id="contact" class="container">
            <h2>Search</h2>
            <p>Entrering params for search News</p>
            <form class="form-horizontal" action="${pageContext.request.contextPath}/controller?command=search" method="post">
                <![CDATA[
            <legend>
            ]]>
                Params
                <![CDATA[
            </legend>
            ]]>
                <div class="form-group">
                    <label class="control-label col-xs-3" for="category">Category</label>
                    <div class="col-xs-6">
                        <input type="text" class="form-control" id="category" placeholder="Enter category name" name="category"  />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-3" for="subcategory">Subcategory</label>
                    <div class="col-xs-6">
                        <input type="text" class="form-control" id="subcategory" placeholder="Enter subcategory name"  name="subcategory" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-3" for="newsName">Name of News</label>
                    <div class="col-xs-6">
                        <input type="text" class="form-control" id="newsName" placeholder="Enter Name of News" name="newsName" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-3" for="provider">Provider of News</label>
                    <div class="col-xs-6">
                        <input type="text" class="form-control" id="provider" placeholder="Enter provider" name="newsProvider" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-3" for="date">Date</label>
                    <div class="col-xs-6">
                        <input type="text" class="form-control" id="date" placeholder="Enter date of News" name="newsDate" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-3" for="body">Words in body News</label>
                    <div class="col-xs-6">
                        <input type="text" class="form-control" id="body" placeholder="Enter some information" name="newsBody" />
                    </div>
                </div>

                    <div class="form-group">
                        <div class="col-xs-offset-3 col-xs-6">
                            <input type="submit" class="btn btn-primary col-xs-3" value="Search" />
                            <span class="emptyfield col-xs-3 "></span>
                            <input type="reset" class="btn btn-default col-xs-3" style="width: 100px;" value="Reset" />
                        </div>
                    </div>
            </form>
        </fieldset>

        <!--Show results-->

        <c:if test="${not empty sessionScope.result}">

            <div class="container">
                <!--<div class="row">-->
                    <!--<div class="col-xs-5 col-xs-offset-1 text-right" style="padding: 10px;">-->
                        <!--<p style="font-size: 15px">Results</p>-->
                    <!--</div>-->
                    <!--<div class="col-xs-1">-->
                        <!--<button class="btn btn-default" data-toggle="collapse" data-target="#demo">view</button>-->
                    <!--</div>-->
                <!--</div>-->
                <!--<div id="demo" class="collapse">-->
                    <div class="row col-xs-8 col-xs-offset-2 ">
                        <div class="row">
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th class="col-xs-1">â„–</th>
                                    <th class="col-xs-1">Category</th>
                                    <th class="col-xs-1">Subcategory</th>
                                    <th class="col-xs-1">News name</th>
                                    <th class="col-xs-1">Provider</th>
                                    <th class="col-xs-1">Date</th>
                                    <th class="col-xs-2">Body</th>
                                </tr>
                                </thead>
                                <tbody>
                                <c:forEach var="result" items="${sessionScope.result}" varStatus="status">
                                    <tr>
                                        <td class="col-xs-1">${status.index+1}</td>
                                        <td class="col-xs-1">${result.categoryName}</td>
                                        <td class="col-xs-1">${result.subcategoryName}</td>
                                        <td class="col-xs-1">${result.nameNews}</td>
                                        <td class="col-xs-1">${result.provider}</td>
                                        <td class="col-xs-1">${result.date}</td>
                                        <td class="col-xs-2">${result.body}</td>
                                    </tr>
                                </c:forEach>
                                </tbody>
                            </table>
                        </div>
                    </div>
                <!--</div>-->
            </div>
        </c:if>


    </div>
</body>
</html>